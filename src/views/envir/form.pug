extends ../layout

block content
  h1 Report Environmental Data

  form(method="post", action="/environmental", enctype="application/x-www-form-urlencoded")
    input(type="text", name="type", placeholder="Type (air_quality/noise)", required)
    input(type="number", name="value", placeholder="Value (e.g., AQI or dB)", required)
    input(type="text", name="longitude", placeholder="Longitude", required)
    input(type="text", name="latitude", placeholder="Latitude", required)
    button(type="submit") Submit