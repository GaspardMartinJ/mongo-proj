extends layout

block content
  h1= title
  p Bienvenue sur le projet de signalements sur une carte.
  
  .carte-container
    .carte-wrapper
      img.carte-image(src="images/carte_accueil.png", alt="Carte")
      .point-1
        img.point-image(src="images/point.png", alt="Point")
      .point-2
        img.point-image(src="images/point.png", alt="Point")
      .point-3
        img.point-image(src="images/point.png", alt="Point")
      .point-4
        img.point-image(src="images/point.png", alt="Point")
      .point-5
        img.point-image(src="images/point.png", alt="Point")
  
  style.
    .carte-container {
      position: relative;
      width: 100%;
      max-width: 800px;
      margin: 20px auto;
      overflow: hidden;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    
    .carte-wrapper {
      position: relative;
      width: 100%;
    }
    
    .carte-image {
      width: 100%;
      height: auto;
      display: block;
    }
    
    .point-1, .point-2, .point-3, .point-4, .point-5 {
      position: absolute;
      width: 30px;
      height: 30px;
      opacity: 0;
      animation: pulse 2s infinite;
    }
    
    .point-image {
      width: 100%;
      height: 100%;
    }
    
    /* Positions des points sur la carte (à ajuster selon votre image) */
    .point-1 { top: 25%; left: 48%; animation-delay: 0s; }
    .point-2 { top: 70%; left: 42%; animation-delay: 0.8s; }
    .point-3 { top: 40%; left: 65%; animation-delay: 1.6s; }
    .point-4 { top: 60%; left: 25%; animation-delay: 2.4s; }
    .point-5 { top: 30%; left: 20%; animation-delay: 3.2s; }
    
    @keyframes pulse {
      0% { transform: scale(0); opacity: 0; }
      25% { transform: scale(1.2); opacity: 1; }
      50% { transform: scale(1); opacity: 1; }
      75% { transform: scale(1.2); opacity: 1; }
      100% { transform: scale(1); opacity: 1; }
    }
    
  script.
    // Animation séquentielle des points
    document.addEventListener('DOMContentLoaded', function() {
      const points = document.querySelectorAll('.point-1, .point-2, .point-3, .point-4, .point-5');
      
      // Afficher les points en séquence
      function startAnimation() {
        points.forEach((point, index) => {
          setTimeout(() => {
            point.style.opacity = '1';
          }, index * 800);
        });
      }
      
      // Démarrer l'animation
      setTimeout(startAnimation, 500);
    });